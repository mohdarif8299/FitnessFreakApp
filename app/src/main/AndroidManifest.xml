<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitnessfreak">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".user.UserProfileActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".recieps.ReciepeActivity" android:screenOrientation="portrait" />
        <activity android:name=".exercise.ExerciseDetails" android:screenOrientation="portrait" />
        <activity android:name=".exercise.ExerciseActivity" android:screenOrientation="portrait" />
        <activity android:name=".gymprograms.GymProgramsActivity" android:screenOrientation="portrait" />
        <activity android:name=".pedometer.PedometerActivity" android:screenOrientation="portrait" />
        <activity android:name=".yogasessions.YogaSessions" android:screenOrientation="portrait" />
        <activity android:name=".yogasession.YogaSession" android:screenOrientation="portrait" />
        <activity android:name=".nutritionplans.NutritionPlans" android:screenOrientation="portrait" />
        <activity android:name=".featureprograms.FeaturedProgram" android:screenOrientation="portrait" />
        <activity android:name=".HomeActivity" android:screenOrientation="portrait" />
        <activity android:name=".SignupActivity" android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity" android:screenOrientation="portrait" />
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>